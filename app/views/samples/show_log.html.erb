<h2>Sample log for <%= "#{@sample.crc_id_s} (#{@sample.name})" %></h2>

<% if not @sample_log.empty? then %>

  <table class="admin_table">
    <tr>
      <th>When</th>
      <th>Who</th>
      <th>What</th>
    </tr>
  <% @sample_log.each do |log| %>
    <tr>
      <td><%= log.created_at %></td>
      <td><%= log.actor.is_researcher? ? log.actor.full_name : log.actor.hex if log.actor -%></td>
      <td>
	<%= log.comment %>
      	<% if log.controlling_user and log.controlling_user != log.actor %>
	<i>(action performed by <%= log.controlling_user.full_name %>)</i>
	<% end %>
      </td>
    </tr>
  <% end %>
  </table>
<% else %>
  There are no log entries yet for this sample.
<% end %>

