<%= form_for(@sample) do |f| %>
  <% if @sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sample.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul>
      <% @sample.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :study_id %><br />
    <%= @sample.study.name %>
  </div>
  <div class="field">
    <%= f.label :kit_id %><br />
    <%= @sample.kit.name %>
  </div>
  <div class="field">
    <%= f.label :participant_id %><br />
    <%= @sample.participant.nil? ? '' : @sample.participant.hex %>
  </div>
  <div class="field">
    <%= f.label :original_kit_design_sample_id %><br />
    <%= @sample.original_kit_design_sample.name %>
  </div>
  <div class="field">
    <%= f.label :kit_design_sample_id %><br />
    <%= @sample.kit_design_sample.name %>
  </div>
  <div class="field">
    <%= f.label :when_originated %><br />
    <%= @sample.when_originated %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br />
    <% if @sample.owner.nil? %>
    <% elsif @sample.owner.is_researcher? %>
    <%= @sample.owner.full_name %>
    <% else %>
    <%= @sample.owner.hex %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :last_mailed %><br />
    <%= @sample.last_mailed %>
  </div>
  <div class="field">
    <%= f.label :last_received %><br />
    <%= @sample.last_received %>
  </div>
  <div class="field">
    <%= f.label :participant_note %><br />
    <pre>
    <%= @sample.participant_note %>
    </pre>
  </div>
  <div class="field">
    <%= f.label :researcher_note %><br />
    <%= f.text_area :researcher_note, :cols => 80 %>
  </div>
  <div class="field">
    <%= f.label :concentration %><br />
    <%= f.text_field :concentration %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </div>
  <div class="field">
    <%= f.label :material %><br />
    <%= f.text_field :material %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
