<h2>New answer option</h2>

<%= form_for @answer_option, :as => :answer_option,
            :url => admin_content_area_exam_exam_version_exam_question_answer_options_path(
              @content_area,
              @exam,
              @exam_version,
              @exam_question),
            :html => { :method => :post } do |f| %>
  <%= error_messages_for :answer_option, :header_message => 'Error: data could not be saved.', :message => nil %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_content_area_exam_exam_version_exam_question_answer_options_path(@content_area, @exam, @exam_version, @exam_question) %>
