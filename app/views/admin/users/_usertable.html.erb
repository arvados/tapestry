<p>&nbsp;</p>
<strong><%= @result %></strong>

<% if @users.size > 0 -%>
<%= will_paginate @users %>
<table class="admin_table">
  <tr>
    <th>PGP #</th>
    <th>Name</th>
    <th>Email</th>
    <th>Active?</th>
    <th>Is Admin?</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Activate</th>
  </tr>
  <% @users.each do |user| -%>
    <tr class="<%= cycle 'even', 'odd' %>">
      <td><%= user.pgp_id %></td>
      <td><%= link_to user.full_name, admin_user_url(user) %></td>
      <td><%=h user.email %></td>
      <td><%=  user.active? %></td>
      <td><%=  user.is_admin? %></td>
      <td><%= link_to 'Edit', edit_admin_user_url(user) %></td>
      <td><%= link_to 'Delete', admin_user_url(user),
                :method => 'DELETE',
                :confirm => 'Are you sure you want to delete this user?' %></td>
      <td><%= link_to 'Activate', activate_admin_user_url(user.id), :method => 'PUT' %></td>
    </tr>
  <% end -%>
</table>
<%= will_paginate @users %>
<% end %>
