<body>
	<div id="body">
		<h1 class="verbose"><%= link_to '<span>Personal Genome Project</span>', root_url %></h1>



<div class="menu">
    <ul class="links">
      <li><%= link_to 'Home', root_url %></li>
      <% unless current_user -%>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Signup</a></li>
      <% else -%>
        <li><%= link_to 'Account', edit_user_url(current_user) %></li>
        <li><%= link_to 'Logout', logout_url %></li>

        <% if current_user.is_admin? -%>
          <li><%= link_to 'Admin', admin_root_url %></li>
        <% end -%>
      <% end -%>
		</ul>
</div>
<div class="clear"><!-- --></div>

<%= breadcrumbs %>

<%= display_standard_flashes %>

